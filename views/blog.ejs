<!DOCTYPE html>
<html lang="en" dir="ltr">
    <%- include('./partials/head.ejs') %>
    <body>
        <%- include('./partials/nav.ejs') %>
        <% if (blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                <a href="/blog/post/<%= blog._id %>">
                    <h3><%= blog.title %></h3>
                    <p><%= blog.content %></p>
                </a>
            <% }) %>
        <% } %>
        <%- include('./partials/footer.ejs') %>
    </body>
</html>
